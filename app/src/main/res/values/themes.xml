<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TGCodeExam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBlue</item>
        <item name="colorPrimaryVariant">@color/secondaryBlue</item>
        <item name="colorOnPrimary">@color/onPrimaryBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/onSecondaryBlue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" >
        <item name="colorPrimary">@android:color/white</item>
    </style>

    <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
